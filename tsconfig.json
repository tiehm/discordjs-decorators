{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "test/**/*",
    "src/**/*.test.ts",
    "examples/**/*",
    "examples",
    "scripts",
    "scripts/**/*",
    "*.test.*",
    "examples/**/*"
  ]
}
